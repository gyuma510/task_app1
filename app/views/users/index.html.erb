<h3>スケジュール一覧</h3>

<% if flash[:success] %>
 <p class="success"><%= flash[:success] %></p>
<% end %>
<% if flash[:failer] %>
 <p class="failer"><%= flash[:failer] %></p>
<% end %>
<% if flash[:delete] %>
 <p class="delete"><%= flash[:delete] %></p>
<% end %>

<table>
 <thead>
  <tr>
   <th>id</th>
   <th>タイトル</th>
   <th>開始日</th>
   <th>終了日</th>
   <th>終日</th>
   <th>スケジュール更新日時</th>
   <th>確認</th>
   <th>編集</th>
   <th>削除</th>
  </tr>
 </thead>

 <tbody>
  <% @users.each do |user| %>
   <tr>
    <td><%= user.id %></td>
    <td><%= user.title %></td>
    <td><%= user&.start_at&.strftime("%Y年%m月%d日") %></td>
    <td><%= user&.end_at&.strftime("%Y年%m月%d日") %></td>
    <td>
     <% if user.all_day %>
     <string>○</string>
     <% end %>
    </td>
    <td><%= user.updated_at.strftime("%Y年%m月%d日%H時%M分") %></td>
    <td><%= link_to "確認", user %></td>
    <td><%= link_to "編集", [:edit,user] %></td>
    <td><%= link_to "削除", user,method: :delete,data:{ confirm:"本当に削除しますか？"} %></td>
   </tr>
  <% end %>
 </tbody>
</table>

<p><%= link_to "スケジュール新規登録",:new_user %></p>

<footer>
<h1>スケジュール合計:<%= User.count('') %></h1>
</footer>