<h3>スケジュール詳細</h3>

<table>
 <tr>
  <th>タイトル</th>
  <td><%= @user.title %></td>
 </tr>
 <tr>
 <th>開始日</th>
 <td><%= @user&.start_at&.strftime("%Y年%m月%d日") %></td>
</tr>
<tr>
  <th>終了日</th>
  <td><%= @user&.end_at&.strftime("%Y年%m月%d日") %></td>
 </tr>
 <tr>
  <th>終日</th>
  <td>
   <% if @user.all_day %>
    <string>○</string>
   <% end %>
  </td>
 </tr>
 <tr>
  <th>スケジュールメモ</th>
  <td><%= @user.memo %></td>
 </tr>
</table>

<div>
 <ul>
  <li><%= link_to "スケジュール一覧に戻る", :users %></li>
  <li><%= link_to"スケジュールを編集する", :edit_user %></li>
  <li><%= link_to"スケジュールを削除", :user,method: :delete,data:{confirm:"本当に削除しますか？"} %></li>
 </ul>
</div>